<div class="d-flex flex-column align-items-center justify-content-center h-100">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card w-25" }) do |f| %>

    <h1 class="card-header text-center">Sign in</h1>
    <div class="card-body">
      <div class="form-group py-3">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group py-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check py-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
    </div>

    <div class="card-footer">
      <%= f.submit "Sign in", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
</div>
