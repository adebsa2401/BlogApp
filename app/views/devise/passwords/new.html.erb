<div class="d-flex flex-column align-items-center justify-content-center h-100">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "card w-25" }) do |f| %>

    <h2 class="card-header text-center">Forgot your password?</h2>
    <div class="card-body">
      <div class="form-group py-3">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="card-footer">
      <%= f.submit "Send instructions", class: "btn btn-primary" %>
    </div>
  <% end %>
  <p>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
  <p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
</div>
